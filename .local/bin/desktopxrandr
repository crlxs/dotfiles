#!/bin/bash

xrandr --output DP-0 --primary --mode 1920x1080 -r 144
xrandr --output DP-3 --mode 1920x1080 -r 60 --left-of DP-0
xrandr --output HDMI-0 --mode 1920x1080 -r 60 --right-of DP-0 --rotate right

fehwallpaper

