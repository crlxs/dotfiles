#!/bin/bash

xrandr --output DP-2 --primary --mode 1920x1080 -r 144 --output DP-5 --mode 1920x1080 --left-of DP-2 --output HDMI-0 --mode 1920x1080 -r 60 --right-of DP-2 --rotate right

